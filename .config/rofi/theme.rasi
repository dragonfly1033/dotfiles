* {
    background-color: #1e1e2e;
    border-color:          White;
    text-color: #cdd6f4;
    accent: #89b4fa;
    font:            "Fira Code 12";
}
window {
    anchor:     north;
    location:   north;
    width:      100%;
    padding:    0px 0px 0px 0px;
    children:   [ horibox ];
}
horibox {
    orientation: horizontal;
    children:   [ prompt, entry, listview ];
}
listview {
    layout:     horizontal;
    spacing:    5px;
    lines:      100;
}
entry {
    expand:     false;
    width:      10em;
    padding: 0px 3px;
}
element {
    padding: 3px 6px;
}
element selected {
	text-color: @background-color;
    background-color: @accent;
}
prompt {
	text-color: @background-color;
    background-color: @accent;	
}
element-text, element-icon {
  background-color: inherit;
  text-color: inherit;
}
