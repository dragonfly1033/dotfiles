"brightness inc 10"
    m:0x0 + c:233
    XF86MonBrightnessUp
    
"brightness dec 10"
    m:0x0 + c:232
    XF86MonBrightnessDown

"numlockx on"
    m:0x10 + c:77
    Mod2 + Num_Lock

"playerctl next"
    m:0x10 + c:171
    Mod2 + XF86AudioNext

"playerctl previous"
    m:0x10 + c:173
    Mod2 + XF86AudioPrev

"playerctl play-pause"
    m:0x10 + c:172
    Mod2 + XF86AudioPlay

"playerctl -p pragha play-pause"
    m:0x10 + c:76
    Mod2 + F10

"playerctl -p pragha position 5-"
    m:0x90 + c:59
    Mod2+Mod5 + comma

"playerctl -p pragha position 5+"
    m:0x90 + c:60
    Mod2+Mod5 + period

"playerctl -p pragha previous"
    m:0x90 + c:47
    Mod2+Mod5 + semicolon
    
"playerctl -p pragha next"
    m:0x90 + c:48
    Mod2+Mod5 + apostrophe

# "notify-send hello"
#     m:0x90 + c:48
#     Mod2+Mod5 + apostrophe

# Increase volume
"pactl set-sink-volume @DEFAULT_SINK@ +1%"
   XF86AudioRaiseVolume

# Decrease volume
"pactl set-sink-volume @DEFAULT_SINK@ -1%"
   XF86AudioLowerVolume

# Mute volume
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
   XF86AudioMute

# Mute microphone
"pactl set-source-mute @DEFAULT_SOURCE@ toggle"
    m:0x0 + c:248
    NoSymbol

