#!/bin/sh

ddmenu=~/bin/dmenu
PROF=$($ddmenu "Main\nChill\nPolitics\nAnime\nIncog\nPriv" "Config:")

if [ $PROF == 'Main' ]; then
	firefox -P Main
elif [ $PROF == 'Chill' ]; then
	firefox -P Chill
elif [ $PROF == 'Politics' ]; then
	firefox -P Pol
elif [ $PROF == 'Anime' ]; then
	firefox -P Weeb
elif [ $PROF == 'Incog' ]; then
	firefox -P Inc
elif [ $PROF == 'Priv' ]; then
	firefox --private-window -P Main
fi
