#!/bin/sh

source $HOME/bin/.env/THEME_META

LIST=$(python $HOME/bin/theme_meta $safe $light)
THEME=$(echo "random"$'\n'"$LIST" | rofi -dmenu -i -p " Theme:  ")
if [[ -n $THEME ]]; then
	if [[ $THEME = "random" ]]; then
		rnd=$(python $HOME/bin/theme_meta $safe $light | shuf -n 1)
		echo $rnd
		$HOME/bin/set_theme $rnd
	else
		$HOME/bin/set_theme $THEME
	fi
fi
