#!/bin/sh

themes=$HOME/.config/themes_safe

LIST=$(ls -1 $themes)
THEME=$(echo "random"$'\n'"$LIST" | rofi -dmenu -i -p " Theme:  ")
if [[ -n $THEME ]]; then
	if [[ $THEME = "random" ]]; then
		rnd=$(ls -1 $themes | shuf -n 1)
		echo $rnd
		$HOME/bin/theme $rnd
	else
		$HOME/bin/theme $THEME
	fi
fi
