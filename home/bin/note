#!/bin/sh

name=$1
view=$2

if [ -z $view ]; then
	view=$EDITOR
else
	view=$PAGER
fi

if [ -z $name ]; then
	$view $HOME/Documents/notes/temp-$(date +"%y-%m-%d--%H:%M:%S")
elif [ $name == "list" ]; then
	$view "$HOME/Documents/notes/$(ls $HOME/Documents/notes | fzf)"
else
	$view "$HOME/Documents/notes/$name.txt"
fi
