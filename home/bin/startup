s#!/bin/bash

function run {
	echo 'TESTING-------------------------' $@
  	if ! pgrep -f "$*" ; then
  		$@&
  	else
	echo "EXISTS--------------------------"
  	fi
}

setxkbmap gb
sudo chgrp video /sys/class/backlight/amdgpu_bl0/brightness
sudo chmod g+w /sys/class/backlight/amdgpu_bl0/brightness
numlockx on
$HOME/bin/set_temp_sensor

run picom --no-vsync --experimental-backends
run ~/.fehbg
run polybar -r top
run mpris-proxy 
run volctl 
run xbindkeys
run /usr/lib/mate-polkit/polkit-mate-authentication-agent-1
