#!/bin/sh

dirr=$1

if [ -z $dirr ]; then
	dirr="."
fi

list=$(ls $dirr | fzf --cycle -m | tr ' ' '\n')
echo "Are you sure you want to delete: "
echo $list | tr ' ' '\n' | sed 's/^\(.*\)/\t\1/g'
read -p "Confirm(y/n)? " conf

if [ "_$conf" == "_y" ]; then
	echo $list | tr ' ' '\n' | xargs -I{} rm "$dirr/{}"
else
	echo "Aborted"
fi


